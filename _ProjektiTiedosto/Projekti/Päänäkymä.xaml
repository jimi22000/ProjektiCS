<Window x:Class="Projekti.Päänäkymä"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekti"
        mc:Ignorable="d"
        Title="Päänäkymä" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top" Background="White">
            <MenuItem Header="_Asetukset">
                <MenuItem Header="_Kieli"/>
                <MenuItem Header="_Tyyli"/>
            </MenuItem>
            <MenuItem Header="_Takaisin" Click="MenuItem_Click"/>


        </Menu>

        <Grid Height="415" Width="800">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="22*"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="Inventaario" Height="375" VerticalAlignment="Center" Margin="10,0,640,0" TextChanged="Inventaario_TextChanged" Grid.ColumnSpan="2" />
            <Button x:Name="Tarkista" Content="Button" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Click="Tarkista_Click"/>
            <Button Content="Button" HorizontalAlignment="Left" Margin="55,0,0,0" VerticalAlignment="Top" Click="Button_Click"/>

        </Grid>
    </DockPanel>
</Window>
